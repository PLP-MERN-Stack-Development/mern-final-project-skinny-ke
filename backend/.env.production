# Production Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/collabtask_prod?retryWrites=true&w=majority
MONGODB_TEST_URI=mongodb://localhost:27017/collabtask_test

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-here-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-here-change-this-in-production
JWT_REFRESH_EXPIRE=30d

# Redis Configuration (for production)
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@collabtask.com

# File Storage Configuration (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=collabtask-files-prod

# Frontend Configuration
FRONTEND_URL=https://collabtask.com
CORS_ORIGIN=https://collabtask.com

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/collabtask.log

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-id-here

# Performance Configuration
CACHE_TTL=3600
SESSION_TTL=86400

# Feature Flags
ENABLE_REAL_TIME=true
ENABLE_FILE_UPLOAD=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# Admin Configuration
ADMIN_EMAIL=admin@collabtask.com
SUPPORT_EMAIL=support@collabtask.com